<view class="container">
  <!-- 商品图片轮播图 -->
  <swiper class="swiper-container" autoplay="true" interval="3000" duration="500">
    <block wx:for="{{product.images}}" wx:key="index">
      <swiper-item>
        <image class="swiper-image" src="{{item}}" mode="aspectFill"></image>
      </swiper-item>
    </block>
  </swiper>
  
  <!-- 商品标题 -->
  <view class="product-title">{{product.title}}</view>
  
  <!-- 商品价格 -->
  <view class="product-price">￥{{product.price}}</view>
  
  <!-- 商品描述 -->
  <view class="product-description">
    <view class="description-title">商品详情</view>
    <view class="description-content">{{product.description}}</view>
  </view>
  
  <!-- 底部操作栏 -->
  <view class="bottom-bar">
    <button class="cart-button" bindtap="addToCart">加入购物车</button>
    <button class="buy-button" bindtap="buyNow">立即购买</button>
  </view>
</view>
